<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/lblue"
                android:endColor="@color/pink"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/blue" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/green"
                android:startColor="@color/yellow"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/greend" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item>
        <shape>

            <gradient
                android:endColor="@color/blue"
                android:startColor="@color/beyaz"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/blued" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>